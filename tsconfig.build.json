{
  "compilerOptions": {
    "outDir": "tsbuild",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    // "allowJs": true,
    "jsx": "preserve",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "declaration": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*",
     "custom.d.ts"
   ]
}
