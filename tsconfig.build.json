{
  "compilerOptions": {
    "outDir": "tsbuild",
    "module": "commonjs",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false
  },
  "files": [
    "src/Playground.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
     "custom.d.ts"
   ]
}
